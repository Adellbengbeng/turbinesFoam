FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


turbine
{
    type            crossFlowTurbineALSource;
    active          on;
    selectionMode   cellSet;    // cellSet // points //cellZone
    cellSet         turbine;

    crossFlowTurbineALSourceCoeffs
    {
        fieldNames      (U);
        nBlades	        3;
        tipEffect       0.95; 

        freeStreamVelocity (1 0 0);
        upstreamPoint   (-1.0, 0, 0); // probably don't need this
        tipSpeedRatio   1.9;

        origin          (0 0 0);
        axis            (0 0 1); // negative for opposite rotation
        rotorRadius     0.5; // for tip speed ratio calculation

        blades
        {
            blade1
            {
                nElements   12;
                profile     NACA0020;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 0.0 0.14 0.5 0.0)
                    ( 0.5 0.5 0.0 0.14 0.5 0.0)
                );
            }
            blade2
            {
                nElements   16;
                profile     NACA0018;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 120.0 0.14 0.5 0.0)
                    ( 0.5 0.5 120.0 0.14 0.5 0.0)
                );
            }
            blade3
            {
                nElements   18;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 240.0 0.14 0.25 0.0)
                    ( 0.5 0.5 240.0 0.14 0.25 0.0)
                );
            }
        }
        
        profiles
        {
            NACA0020
            {
            data ( // alpha C_l C_d
                #include "NACA64_A17"
            );
            }
            NACA0018
            {
            data (
                #include "NACA64_A17"
            );
            }
            NACA0021
            {
            data (
                #include "NACA64_A17"
            );
            }
        }
    }
}

