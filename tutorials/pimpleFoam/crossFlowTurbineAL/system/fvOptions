FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


turbine
{
    type            crossFlowTurbineALSource;
    active          on;
    selectionMode   cellSet;    // cellSet // points //cellZone
    cellSet         turbine;

    crossFlowTurbineALSourceCoeffs
    {
        fieldNames      (U);
        nBlades	        3;
        tipEffect       0.95; 

        freeStreamVelocity (1 0 0);
        upstreamPoint   (-1.0, 0, 0); // probably don't need this
        tipSpeedRatio   1.9;

        origin          (0 0 0);
        axis            (0 0 1); // negative for opposite rotation
        rotorRadius     0.5; // for tip speed ratio calculation
        
        dynamicStall
        {
            active              on;
            dynamicStallModel   LeishmanBeddoes;
        }

        blades
        {
            blade1
            {
                nElements   20;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 0.0 0.14 0.5 0.0)
                    ( 0.5 0.5 0.0 0.14 0.5 0.0)
                );
            }
            blade2
            {
                nElements   20;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 0.0 0.14 0.5 0.0)
                    ( 0.5 0.5 0.0 0.14 0.5 0.0)
                );
            }
            blade3
            {
                nElements   20;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.5 0.5 0.0 0.14 0.5 0.0)
                    ( 0.5 0.5 0.0 0.14 0.5 0.0)
                );
            }
        }
        
        struts
        {
            strut1
            {
                nElements   10;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (0.0 0.05 0.0 0.14 0.5 0.0)
                    (0.0 0.49 0.0 0.14 0.5 0.0)
                );
            }
            strut2
            {
                nElements   10;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (0.0 0.05 0.0 0.14 0.5 0.0)
                    (0.0 0.49 0.0 0.14 0.5 0.0)
                );
            }
            strut3
            {
                nElements   10;
                profile     NACA0021;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (0.0 0.05 0.0 0.14 0.5 0.0)
                    (0.0 0.49 0.0 0.14 0.5 0.0)
                );
            }
        }
        
        shaft
        { 
            nElements   20;
            profile     cylinder;
            elementData
            ( // axialDistance, diameter
                (-0.66 0.09)
                ( 0.66 0.09)
            );
        }
        
        profiles
        {
            NACA0021
            {
                data ( // alpha C_l C_d
                    #include "NACA0021_1.6e5"
                );
            }
            cylinder
            {
                data ((-180 0 1.1)(180 0 1.1));
            }
        }
    }
}

